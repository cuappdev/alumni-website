rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /profile-pictures/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    match /company-logos/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
